{
  "manifestVersion": 1,
  "id": "AssemblyVersionLoader",
  "name": "Assembly version loader",
  "version": "1.0.9",
  "publisher": "AppiePau",
  "public": true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "Loads an assembly version from the DLL file using reflection and makes them available as build variables.",
  "categories": [
    "Build and release"
  ],
  "tags": [
    "Assembly",
    "AssemblyInfo",
    "Version",
    "Variables",
    "Build",
    "Process"
  ],
  "icons": {
    "default": "images/extension-icon.png"
  },
  "files": [
    {
      "path": "AssemblyVersionLoader"
    }
  ],
  "content": {
    "details": {
      "path": "readme.md"
    },
    "license": {
      "path": "license"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/appiepau/AssemblyVersionLoader"
    },
    "support": {
      "uri": "https://github.com/appiepau/AssemblyVersionLoader/issues"
    }
  },
  "screenshots": [
    {
      "path": "images/screen1.png"
    },
    {
      "path": "images/screen2.png"
    }
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/appiepau/AssemblyVersionLoader"
  },
  "contributions": [
    {
      "id": "assembly-info-reader-build-task",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "AssemblyVersionLoader"
      }
    }
  ]
}
